<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Cow App{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block extra_css %}{% endblock %}
</head>
<body class="p-4">

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_generator.generate('page_a') }}">Cow App</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ url_generator.generate('page_a') }}">Page A</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ url_generator.generate('page_b') }}">Page B</a></li>
                    {% if is_admin %}
                        <li class="nav-item"><a class="nav-link" href="{{ url_generator.generate('statistics') }}">Statistics</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ url_generator.generate('report') }}">Report</a></li>
                    {% endif %}
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item me-2">
                        <span>{{ username }}</span>
                    </li>
                </ul>
                <a href="{{ url_generator.generate('logout') }}" class="btn btn-outline-secondary">Logout</a>
            </div>
        </div>
    </nav>
{% endblock %}

<div class="container">
    {% block content %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
{% block extra_js %}{% endblock %}
</body>
</html>
